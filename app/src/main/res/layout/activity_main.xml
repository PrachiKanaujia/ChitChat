<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/whatsapp_background"
    android:padding="20sp"
    android:paddingTop="50sp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/whatsapp_icon"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHIT CHAT"
        android:textSize="26sp"
        android:fontFamily="cursive"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textStyle="bold"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/border"
        android:hint="Your Name..."
        android:padding="10sp"
        android:layout_marginTop="15sp"
        android:id="@+id/txtname"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/border"
        android:hint="Your Email..."
        android:padding="10sp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="15sp"
        android:id="@+id/txtemail"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/border"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10sp"
        android:layout_marginTop="15sp"
        android:id="@+id/txtpass"></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have a account?"
        android:gravity="right"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:onClick="openSignIn"></TextView>
    <Button
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:id="@+id/btnregister"
        android:onClick="setOnClickListener"
        ></Button>
  </LinearLayout>
</ScrollView>




</LinearLayout>
